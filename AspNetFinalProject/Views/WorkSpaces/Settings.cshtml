@using AspNetFinalProject.Enums
@model AspNetFinalProject.DTOs.WorkSpaceDto
@{
    ViewData["Title"] = Model.Title;
}

<h2>Налаштування: @Model.Title</h2>

<ul class="nav nav-tabs mb-3" id="settingsTabs">
    <li class="nav-item">
        <a class="nav-link active" data-tab="general" href="#">Загальні</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-tab="boards" href="#">Дошки</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-tab="participants" href="#">Учасники</a>
    </li>
</ul>

<div id="tabContent">
    <div id="tab-general">
        <form id="workspaceSettingsForm">
            <div class="mb-3">
                <label class="form-label">Назва</label>
                <input type="text" maxlength="100" minlength="3" class="form-control" name="title" value="@Model.Title">
            </div>
            <div class="mb-3">
                <label class="form-label">Опис</label>
                <textarea class="form-control" maxlength="1000" name="description">@Model.Description</textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Видимість</label>
                <select class="form-select" name="visibility" asp-for="Visibility"
                        asp-items="Html.GetEnumSelectList<WorkSpaceVisibility>()">
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
        
        <button class="btn btn-sm @(Model.IsSubscribed ? "btn-outline-secondary" : "btn-outline-success")"
                data-id="@Model.Id"
                id="subscribe-btn">
            @(Model.IsSubscribed ? "Відписатися" : "Підписатися")
        </button>
        
        <button class="btn btn-sm btn-danger ms-2"
                id="delete-btn"
                data-id="@Model.Id"
                data-name="@Model.Title">🗑</button>
    </div>

    <div id="tab-boards" class="d-none">Завантаження дошок...</div>
    <div id="tab-participants" class="d-none">Завантаження учасників...</div>
</div>

@await Html.PartialAsync("_ConfirmDeleteModal")

@section Scripts {
    <script>
        const workspace = @Html.Raw(Json.Serialize(Model));
    </script>
    <script type="module" src="~/js/workspace/settings/main.js"></script>
}